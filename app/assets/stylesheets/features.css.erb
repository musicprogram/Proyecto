

main {
	display: inline-block;
	vertical-align: middle;
	background-image:url('<%= asset_path("bg.jpg") %> ');
	padding:  150px;
	max-width: 400px;
	text-shadow: 0 1px 2px rgba(0,0,0,0.5);
	box-shadow: 0 5px 15px rgba(0,0,0,0.5);
}

h1 {
	font-size: 32px;
}
h2 {
	font-size: 18px;
	margin-top: 6px;
}
p {
	text-align: left;
	margin-top: 20px;
}
a {
	color: #ff6800;
}
pre {
	text-align: left;
	margin-top: 20px;
}

.error {
	display: none;
	position: fixed;
	bottom: 0;
	left: 0;
	background: #000;
	color: #f00;
	padding: 5px;
	max-width: 50%;
}

.disable {
	position: fixed;
	bottom: 0;
	right: 0;
	max-width: 50%;
}
